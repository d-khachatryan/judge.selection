@using  stvsystem.Data
@model SettingItem

<div><p>Ընտրության մանրամասներ</p></div>

<div></div>

@Html.HiddenFor(model => model.SettingID)
@Html.HiddenFor(model => model.SelectionStatus)

@if (Model.SettingID != -1)
{
    <div>
        @Html.LabelFor(model => model.SelectionName)
        @Html.Kendo().TextBoxFor(model => model.SelectionName)
    </div>
    <div>
        @Html.LabelFor(model => model.SelectionDate)
        @Html.Kendo().DatePickerFor(model => model.SelectionDate)
    </div>
    <div>
        @Html.LabelFor(model => model.StartTime)
        @Html.Kendo().TimePickerFor(model => model.StartTime)
    </div>
    <div>
        @Html.LabelFor(model => model.FinishTime)
        @Html.Kendo().TimePickerFor(model => model.FinishTime)
    </div>
    <div>
        @Html.LabelFor(model => model.SelectionCount)
        @Html.Kendo().NumericTextBoxFor(model => model.SelectionCount)
    </div>
    <div>
        @Html.LabelFor(model => model.ParticipantCount)
        @Html.Kendo().NumericTextBoxFor(model => model.ParticipantCount)
    </div>
    @*<div>
            @Html.LabelFor(model => model.SelectionStatus)
            @Html.Kendo().TextBoxFor(model => model.SelectionStatus)
        </div>*@

    @if (Model.SelectionStatus == SettingStatus.InPreparation)
    {
        <div>
            <button type="button" onclick="location.href='@Url.Action("InitUpdate", "Setting")'"><i></i>&nbsp;Խմբագրել</button>
            <button type="button" onclick="location.href='@Url.Action("Initialize", "Setting")'"><i></i>&nbsp;Սկսել քվեարկությունը</button>
            <button type="button" onclick="location.href='@Url.Action("Delete", "Setting")'"><i></i>&nbsp;Հեռացնել</button>
        </div>
    }
    else if (Model.SelectionStatus == SettingStatus.Finished)
    {
        <button type="button" onclick="location.href='@Url.Action("InitInsert", "Setting")'"><i></i> &nbsp; Ավելացնել </button>
    }
    else
    {
        <p>
            Ներկայումs սույն կարգավորումները խմբագրման ենթակա չեն, քանի որը ընտրությունը ընթացքի մեջ է
        </p>
    }
}
else
{
    <div>
        <p>
            Ներկայումս համակարգում չկան ակտիվ գրառումներ ընտրության վերաբերյալ
        </p>
    </div>
    <button type="button" onclick="location.href='@Url.Action("InitInsert", "Setting")'"><i></i> &nbsp; Ավելացնել </button>
}



